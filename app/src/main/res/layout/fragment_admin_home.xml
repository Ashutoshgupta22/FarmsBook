            <TextView
                android:id="@+id/tv_requirements_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/text_requirements_total"
                app:layout_constraintEnd_toEndOf="@id/text_requirements_total"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
