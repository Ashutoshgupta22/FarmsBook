            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/text_crops_listed_today"
            app:layout_constraintEnd_toEndOf="@id/text_crops_listed_today"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/text_crops_listed_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:layout_marginStart="64dp"
            app:layout_constraintTop_toBottomOf="@id/tv_crops_listed_today"
            app:layout_constraintStart_toEndOf="@id/text_crops_listed"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_crops_listed_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/text_crops_listed_total"
            app:layout_constraintEnd_toEndOf="@id/text_crops_listed_total"
