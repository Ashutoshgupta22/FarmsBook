<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_user_management"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_name_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="John Doe"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/iv_user_management"/>

        <TextView
            android:id="@+id/tv_location_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Delhi"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/tv_name_management"
            android:layout_toEndOf="@id/iv_user_management"/>

        <Button
            android:id="@+id/btn_call_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:text="@string/call"
            app:icon="@drawable/baseline_call_24"
            app:iconGravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/tv_location_management"
            android:layout_toEndOf="@id/iv_user_management"/>

        <TextView
            android:id="@+id/tv_company_name_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agrigo Private Limited inksk i dfub idfb id "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="64dp"
            android:textAlignment="textEnd"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/text_company_name"
            android:layout_below="@id/btn_call_management"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tv_company_name_management"
            android:text="@string/company_name" />

        <TextView
            android:id="@+id/tv_company_turnover_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56 lakh annually"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="16dp"
            android:layout_marginStart="64dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/text_company_turnover"
            android:layout_below="@id/tv_company_name_management"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_company_turnover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tv_company_turnover_management"
            android:text="@string/company_turnover" />

        <TextView
            android:id="@+id/tv_registered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 May 2023"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="textEnd"
            android:layout_marginTop="16dp"
            android:layout_marginStart="64dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/text_registered"
            android:layout_below="@id/tv_company_turnover_management"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_registered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tv_registered"
            android:text="@string/registered" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/requirements"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_detail"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="379dp" />

    <TextView
        android:id="@+id/text_no_requirements_posted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No requirements posted"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_requirement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_first"/>

    <TextView
        android:id="@+id/text_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/offers_posted"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_requirement"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="379dp" />

    <TextView
        android:id="@+id/text_no_offers_posted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No offers posted"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_second"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
