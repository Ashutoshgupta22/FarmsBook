<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_constraintTop_toBottomOf="@id/iv_crop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:clipToOutline="true"
            android:background="@drawable/button_background_rounded" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Akash Sharma"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_toStartOf="@id/btn_call"
            android:layout_alignTop="@id/iv_user"
            android:layout_toEndOf="@id/iv_user"/>

        <TextView
            android:id="@+id/tv_buyer_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Delhi"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/btn_call"
            android:layout_below="@id/tv_user_name"
            android:layout_toEndOf="@id/iv_user"/>

        <Button
            android:id="@+id/btn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:text="@string/call"
            app:icon="@drawable/baseline_call_24"
            app:iconGravity="end"
            android:layout_marginStart="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tv_user_name"
            android:layout_alignBottom="@id/tv_buyer_location"/>

    </RelativeLayout>
